	position: relative; 
  left: 50%; 
}
.verify_code_div {
  padding: 1px;
  width: auto;
  margin: 0 auto;
  position: relative;  
	left: -50%; 
}
.verify_code_char {
  /* height: 100%; */
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  font-size: 0;
  margin-left: 3.5px;
  margin-right: 3.5px;
}
.verify_code_char_input {
  background-color: #fff;
  width: 100%;
  height: 100%;
  outline: none;
  text-align: center;
